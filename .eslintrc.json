{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true,
        "amd": true,
        "mocha": true
    },
    "extends": ["eslint:recommended"],
    "globals": {
        "logger": true,
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ], 
        "prefer-destructuring": ["error", {
            "VariableDeclarator": {
              "array": false,
              "object": false
            },
            "AssignmentExpression": {
              "array": false,
              "object": false
            }
          }, {
            "enforceForRenamedProperties": false
          }]
    }
}